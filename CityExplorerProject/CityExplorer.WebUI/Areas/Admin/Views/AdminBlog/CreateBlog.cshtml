@model CreateBlogDto
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog Veri Girişi Alanı</h4>
                        <p class="card-subtitle mb-4"> Ana Sayfanın Blog alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.</p>
                        <form method="post">

                            <div class="form-group">
                                <label for="exampleInputTitle">Blog Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputContent">Şehir İçeriği</label>
                                <textarea rows="5" asp-for="Content" class="form-control" placeholder="İçeriği Giriniz"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPublishedDate">Blog Tarihi</label>
                                <textarea rows="5" asp-for="PublishedDate" class="form-control" placeholder="Tarihi Giriniz"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoImageUrl">Blog Resmi</label>
                                <input type="text" class="form-control" id="exampleInputVideoImageUrl" asp-for="ImageUrl" placeholder="Hakkımda Kapak Fotoğraf Linkini Giriniz">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Blog Bilgisini Kaydet</button>
                        </form>

                    </div>
                </div>


            </div>

        </div>


    </div>


</div>

