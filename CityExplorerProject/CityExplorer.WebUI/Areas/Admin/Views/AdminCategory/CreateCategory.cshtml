@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">

                    <div class="card-body">
                        <h4 class="card-title">YeniKategori Girişi</h4>
                        <p class="card-subtitle mb-4">Kategorilerle ilgili işlemlerin gerçekleştireleceği sayfadır.</p>

                        <form asp-action="CreateCategory" asp-controller="AdminCategory" method="post">


                            <div class="form-group">
                                <label for="exampleInputName">Kategori Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="CategoryName" placeholder="Kategori Adını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Kategori Resmi</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Kategori Resmi Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kategoriyi Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

