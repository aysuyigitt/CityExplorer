@model List<ResultCityDetailDto>

@{
    ViewData["Title"] = "City Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    @foreach (var item in Model)
    {
        <div class="row align-items-center mb-4">
            <div class="col-md-6 mb-4">
                <div style="border-radius: 15px; overflow: hidden; border: 5px solid #ddd;">
                    <img src="@item.ImageUrl" alt="City Image" class="img-fluid" style="max-width:100%; height:auto;">
                </div>
            </div>

            <div class="col-md-6">
                <h1 class="display-4 fw-bold">@item.Name</h1>
                <p class="lead">@item.Description</p>
            </div>
        </div>

        <div class="info-section mb-5">
            <p><strong>🌍 Nüfus:</strong>@item.Population</p>
            <p><strong>📏 Yüzölçümü:</strong>@item.Area</p>
            <p><strong>☀️ İklim:</strong>@item.Climate</p>
            <p><strong>🎭 Kültür:</strong>@item.Culture</p>
        </div>
    }
</div>

<style>
    body {
        background-color: #f9f9f9;
    }

    .info-section p {
        font-size: 1.1rem;
        margin-bottom: 10px;
        padding: 8px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>