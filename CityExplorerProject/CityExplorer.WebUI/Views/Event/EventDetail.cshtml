<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        .event-info {
            display: flex;
            align-items: center;
            gap: 15px;
            font-size: 1.4rem;
            font-weight: bold;
            color: black;
        }

            .event-info i {
                font-size: 1.8rem;
            }

        .btn-ticket {
            font-size: 1.2rem;
            font-weight: bold;
            padding: 12px 30px;
            border-radius: 8px;
            display: block;
            margin: 20px auto;
            width: auto;
        }

      
        .alert-ticket {
            display: none; 
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 15px;
            background-color: #28a745;
            color: white;
            border-radius: 8px; 
            font-size: 1.2rem;
            text-align: center;
            width: 250px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center align-items-center">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <img src="@item.ImageUrl" class="img-fluid d-block mx-auto" alt="Etkinlik Resmi">
                </div>
                <div class="col-md-8">
                    <h2 class="text-warning">@item.Name</h2>
                    <h5 class="text-secondary">@item.Description</h5>

                    <div class="event-info mt-4">
                        <i class="fas fa-calendar-alt text-warning"></i>
                        <span>🗓️ @item.StartDate.ToString("dd MMM yyyy HH:mm")</span>
                    </div>

                    <div class="event-info mt-3">
                        <i class="fas fa-map-marker-alt text-danger"></i>
                        <span>@item.Location</span>
                    </div>

                    <!-- Etkinlik Türü -->
                    <div class="d-flex flex-wrap gap-2 my-4">
                        <span class="badge bg-warning text-dark">@item.Stil1</span>
                        <span class="badge bg-primary">@item.Stil2</span>
                        <span class="badge bg-danger">@item.Stil3</span>
                    </div>
                    <div class="mt-4">
                        <button id="biletButton" onclick="biletAl()" style="padding: 10px 20px; font-size: 16px; background-color: #ff5733; color: white; border: none; border-radius: 5px; cursor: pointer;">
                            Bilet Al
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        function biletAl() {
            alert("Bilet Alındı!"); // Kullanıcıya mesaj göster
            let button = document.getElementById("biletButton");
            button.innerText = "Biletin Hazır"; // Buton yazısını değiştir
            button.style.backgroundColor = "#28a745"; // Rengi yeşile çevir
            button.disabled = true; // Tekrar basmayı önlemek için butonu devre dışı bırak
        }
    </script>
</body>
</html>
