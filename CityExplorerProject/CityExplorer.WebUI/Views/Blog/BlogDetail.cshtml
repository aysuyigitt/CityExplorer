@model List<ResultBlogDetailDto>
@{
    ViewData["Title"] = "Gizemli ve Sakin Rotalar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gizemli ve Sakin Rotalar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .blog-header {
            background-color: #f7f7f7;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            margin-bottom: 30px;
        }

            .blog-header h3 {
                font-family: 'Cinzel', serif;
                color: #4a3f34;
                font-size: 2.5rem;
            }

        .blog-description {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #555;
        }

        .activities ul {
            list-style-type: none;
            padding: 0;
        }

        .activities li {
            font-size: 1.1rem;
            color: #6c757d;
            margin-bottom: 10px;
        }

            .activities li::before {
                content: "✅ ";
                color: #28a745;
            }

        .img-fluid {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        footer {
            background-color: #4a3f34;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

    </style>
</head>
<body>
    <div class="container mt-5">
        @foreach (var item in Model)
        {
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="blog-header">
                        <h3>@item.Title</h3>
                    </div>
                    <img src="@item.ImageUrl" alt="@item.Title" class="img-fluid mb-3" style="width: 500%; height: auto; max-height: 200px; object-fit: contain;" />

                </div>
                <div class="col-md-12 blog-description">
                    <p>@item.Description</p>
                    <div class="activities">
                        <h5>Ne Yapılır?</h5>
                        <ul>
                            <li>@item.Description1</li>
                            <li>@item.Description2</li>
                            <li>@item.Description3</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>

    <footer>
        <p>&copy; 2025 Gizemli ve Sakin Rotalar. Tüm hakları saklıdır.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
